<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manuelfleivar.skynventory.Exportar">
    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menub_exportar"

        fab:menu_fab_size="normal"
        fab:menu_openDirection="down"
        fab:menu_fab_label="MENU DE OPCIONES"
        fab:menu_labels_position="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">





        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_i1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_upload"
            fab:fab_colorNormal="#D500F9"
            fab:fab_size="normal"
            fab:fab_label="Exportar Todo" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_i2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_manage"
            fab:fab_colorNormal="#E98e09"
            fab:fab_size="normal"
            fab:fab_label="Articulos DaÃ±ados" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_i3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            fab:fab_size="normal"
            fab:fab_label="Exportar" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
